rm -rf build dist
npm run build
sudo rm -rf /var/www/rridegarage.com/*
sudo cp -r build/* /var/www/rridegarage.com/
sudo nginx -t
sudo systemctl reload nginx
server {
    server_name gokhalebandhu.com www.gokhalebandhu.com;

     root /root/gokhalebandu;   # cloned folder path
     index index.html;
     location / {
        try_files $uri $uri/ /index.html;
     }

    # Admin Panel (Next.js)
    location /v1/admin {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # API calls (avoid mixed-content issues)
    location /api/ {
        proxy_pass http://localhost:8000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Main site (served by backend on port 8

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/gokhalebandhu.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/gokhalebandhu.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

# HTTP to HTTPS redirect
server {
    listen 80;
    server_name gokhalebandhu.com www.gokhalebandhu.com;
    return 301 https://$host$request_uri;
}

